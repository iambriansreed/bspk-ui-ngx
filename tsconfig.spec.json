{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../out-tsc/spec",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "module": "ES2022",
    "types": [
      "jest",
      "@testing-library/jest-dom"
    ],
    "baseUrl": "./",
    "paths": {
      "@shared/*": [
        "projects/shared/src/*"
      ]
    },
  },
  "include": [
    "**/src/**/*.spec.ts",
    "**/src/**/*.d.ts",
    "projects/shared/src/*",
    "projects/shared/src/types/index.ts"
  ]
}