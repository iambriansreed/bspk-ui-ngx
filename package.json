{
    "name": "bspk-ui-ngx",
    "version": "0.0.0",
    "type": "module",
    "scripts": {
        "checks": "npm run lint:all && npm run test",
        "lint:css": "npx stylelint '**/*.scss'",
        "lint:css:fix": "npx stylelint '**/*.scss' --fix",
        "ng": "ng",
        "lint": "eslint && tsc --noEmit ",
        "lint:ui": "npx tsx .scripts/lint.ts",
        "lint:all": "npm run lint && npm run lint:ui && npm run lint:css",
        "start": "npm run prebuild && ng serve",
        "build": "ng build --project=demo --configuration=production && ng build --project=ui --configuration=production",
        "newc": "ng generate component --project=ui",
        "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
        "dev": "npm run routes && run-p dev:serve routes:watch",
        "dev:serve": "ng serve",
        "prebuild": "npx tsx .scripts/pre-build.ts",
        "gh-build": "npm run lint && npm run build && npm run test && cp -r ./dist/browser/index.html ./dist/browser/404.html",
        "pr": "npm run checks && git push --set-upstream origin $(git symbolic-ref --short HEAD) && open \"https://github.com/Anywhererealestate/bspk-ui-ngx/compare/main...$(git symbolic-ref --short HEAD)\"",
        "routes:watch": "npx tsx .scripts/generate-component-routes.ts --watch",
        "routes": "npx tsx .scripts/generate-component-routes.ts --write"
    },
    "private": true,
    "peerDependencies": {
        "@bspk/styles": "^1.0.2"
    },
    "dependencies": {
        "@angular/common": "^21.0.8",
        "@angular/compiler": "^21.0.8",
        "@angular/core": "^21.0.8",
        "@angular/forms": "^21.0.8",
        "@angular/platform-browser": "^21.0.8",
        "@angular/router": "^21.0.8",
        "@bspk/icons": "^1.0.5",
        "@floating-ui/dom": "^1.6.11",
        "ngx-mask": "^20.0.3",
        "rxjs": "~7.8.0",
        "tslib": "^2.3.0",
        "zone.js": "~0.15.0"
    },
    "devDependencies": {
        "@angular/build": "^21.0.5",
        "@angular/cli": "^21.0.5",
        "@angular/compiler-cli": "^21.0.8",
        "@bspk/ui": "^1.3.11",
        "@cspell/eslint-plugin": "^9.4.0",
        "@testing-library/angular": "^18.1.0",
        "@testing-library/jest-dom": "^6.0.0",
        "@types/jest": "^30.0.0",
        "@types/jest-axe": "^3.5.9",
        "angular-eslint": "21.0.1",
        "eslint": "^9.39.1",
        "eslint-plugin-import": "^2.32.0",
        "jest": "^30.2.0",
        "jest-axe": "^10.0.0",
        "jest-environment-jsdom": "^30.2.0",
        "jest-preset-angular": "^16.0.0",
        "jsdom": "^27.1.0",
        "ng-packagr": "^21.0.1",
        "npm-run-all": "^4.1.5",
        "prettier": "^3.6.2",
        "prettier-plugin-jsdoc": "^1.5.0",
        "stylelint": "^16.19.1",
        "stylelint-config-standard": "^38.0.0",
        "stylelint-config-standard-scss": "^14.0.0",
        "ts-jest": "^29.1.0",
        "ts-node": "^10.9.2",
        "typescript": "~5.9.2",
        "typescript-eslint": "8.46.4",
        "watch": "^0.13.0"
    },
    "overrides": {
        "glob": "^11.0.1"
    }
}
